{
  "name": "ez-workers",
  "version": "1.0.0",
  "description": "Easy worker thread management and usage in both the browser and in node.js.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "/********************* Quality and security commands ": "*********************/",
    "lock": "test -f package-lock.json || npm i --package-lock-only",
    "lint": "eslint index.js src/**/*.js",
    "lint:fix": "eslint --fix index.js src/**/*.js",
    "dependencies": "npm-check",
    "dependencies:fix": "npm-check -y",
    "audit": "run-s lock _npmaudit",
    "audit:fix": "run-s lock _npmaudit:fix",
    "_npmaudit": "yarn audit",
    "_npmaudit:fix": "yarn audit --fix",
    "clean": "rm -rf package-lock.json tmp.* .tmp/*",
    "shiny": "yarn run clean && rm -rf docs node_modules",
    "fix": "run-s lint:fix dependencies:fix audit:fix",
    "check": "run-s lint dependencies audit",
    "/********************* Unit test commands ": "*********************/",
    "test:watch": "jest --watchAll",
    "test": "mocha",
    "test:coverage": "jest --coverage",
    "prepublish": "mocha",
    "/********************* Module version commands ": "*********************/",
    "prepublishOnly": "jest",
    "postpublish": "git push --follow-tags",
    "preversion": "run-s lint dependencies audit docs:api docs:toc",
    "postversion": "run-s changelog save",
    "/********************* Git command wrappers ": "*********************/",
    "save": "git commit -a --amend --no-edit",
    "commit": "git commit",
    "mr": "run-s test check commit",
    "/********************* Documentation commands ": "*********************/",
    "changelog": "npx auto-changelog",
    "docs:toc": "npx doctoc --gitlab README.md",
    "docs:api": "npx documentation readme index.js -q --sort-order=alpha --infer-private='^_.*' -s 'API Documentation' --readme-file=API.md",
    "docs:site": "npx documentation build index.js --sort-order=alpha --infer-private='^_.*'  -f html -o docs",
    "alldocs": "run-p docs:*"
  },
  "repository": "https://github.com/julianjensen/ez-workers.git",
  "author": {
    "name": "Julian Jensen",
    "email": "jjdanois@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.5.0",
    "jest": "^26.1.0",
    "mocha": "^8.0.1"
  }
}
